<div class="container">
  <div class="text-center">商品情報編集</div>
  <hr>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with model: @item, url: admin_item_path(@item), local: true do |f| %>
        <p>
          商品画像
          <div class="text-right">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </p>

        <p>
          商品名
          <div class="text-right">
            <%= f.text_field :name %>
          </div>
        </p>

        <p>
          商品説明
          <div class="text-right">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </p>
        <p>価格
          <div class="text-center">
            <%= f.text_field :price %>
          </div>
        </p>
        
        <div class="d-flex justify-content-center">
          <%= f.button class: "btn btn-outline-success" do %>
            <i class="fa-solid fa-check"></i>
          <% end %>
          <%= link_to admin_item_path(@item), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>