<div class="text-center">会員一覧</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <table>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
        </tr>
        <tr>
          <% @customers.each do |customer| %>
            <td><%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %></td>
            <td><%= customer.email %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
