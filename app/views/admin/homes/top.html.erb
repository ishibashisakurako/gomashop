<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="text-center mozi">注文履歴一覧</div>
      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y年%m月%d日"), admin_order_path(order) %></td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>