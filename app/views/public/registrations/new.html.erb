<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
      <p><i class="fa-solid fa-gears"></i> 新規登録</p>

      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <p class="field">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </p>

        <div class="field">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "セイ" %><br />
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "メイ" %><br />
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号" %><br />
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号" %><br />
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <%= f.hidden_field :is_active, value: true %>

        <div class="button">
          <button type="submit"> ログイン</button>
        </div>

      <% end %>

      <%- if controller_name != 'sessions' %>
        <%= link_to "既に登録済の方はこちら", new_session_path(resource_name) %><br />
      <% end %>

    </div>
  </div>
</div>