<div class="text-center">注文情報入力</div>
<div class="container">
  <div class="row"> 
    <div class="col-md-8 offset-md-2">
      <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "セイ" %><br />
          <%= f.text_field :last_name_kana %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "メイ" %><br />
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号" %><br />
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号" %><br />
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      <% end %>
    </div>
  </div>
</div>