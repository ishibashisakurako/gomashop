<div class="container">
  <div class="row"> 
    <div class="col-md-6 offset-md-3">
      <div class="text-center">注文情報入力</div>
      <hr>
      <%= form_with model: @customer, local: true do |f| %>

        <div class="row mb-3">
          <%= f.label :last_name, "姓", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :first_name, "名", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :last_name_kana, "セイ", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :first_name_kana, "メイ", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :postal_code, "郵便番号", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :address, "住所", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :telephone_number, "電話番号", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4 col-form-label">支払方法</div>
          <div class="col-md-8">
            <div class="form-check">
              <%= f.radio_button :payment_method, Order.payment_methods.key(0), class: "form-check-input" %>
              <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card], class: "form-check-label" %>
            </div>
            <div class="form-check">
              <%= f.radio_button :payment_method, Order.payment_methods.key(1), class: "form-check-input" %>
              <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer], class: "form-check-label" %>
            </div>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "注文確認画面へ", class: "btn btn-outline-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
