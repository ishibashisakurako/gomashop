<div class="container">
  <div class="row"> 
    <div class="col-md-6 offset-md-3">
      <div class="text-center">注文情報入力</div>
      <hr>
      <%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>
        <div class="row mb-3">
          <%= f.label :postal_code, "郵便番号", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :postal_code, class: "form-control", value: @customer.postal_code %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :address, "住所", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :address, class: "form-control", value: @customer.address %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :telephone_number, "電話番号", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_field :telephone_number, class: "form-control", value: @customer.telephone_number %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :others, "建物の特徴", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_area :others, class: "form-control", rows: 3 %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4 col-form-label">支払方法</div>
          <div class="col-md-8">
            <div class="form-check">
              <%= f.radio_button :payment_method, Order.payment_methods.key(0), class: "form-check-input", checked: true %>
              <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card], class: "form-check-label" %>
            </div>
            <div class="form-check">
              <%= f.radio_button :payment_method, Order.payment_methods.key(1), class: "form-check-input" %>
              <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer], class: "form-check-label" %>
            </div>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "注文確認画面へ", class: "btn btn-outline-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
