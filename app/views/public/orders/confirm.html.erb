<div class="text-center mozi">注文最終確認</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>数量</th>
          <th>それぞれの金額</th>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.price * cart_item.amount %>円</td>
          </tr>
        <% end %>
      </table>
      <div class="text-right">
        <hr>
        送料 <%= @shopping_cost %>円
        <hr>
        合計金額 <%= @total_price %>円
        <hr>
        <b>請求金額 <%= @total_payment %>円</b>
      </div>
    </div>
    <div class="col-md-6">
      <hr>
      <b>配送先</b>
      <hr>
      <b>名前</b>
      <p><%= @customer.last_name %> <%= @customer.first_name %>(<%= @customer.last_name_kana %> <%= @customer.first_name_kana %>)</p>
      <b>郵便番号</b>
      <p><%= @order.postal_code %></p>
      <b>住所</b>
      <p><%= @order.address %></p>
      <b>電話番号</b>
      <p><%= @order.telephone_number %></p>
      <b>支払方法</b>
      <p><%= @order.payment_method == "credit_card" ? "クレジットカード" : "銀行振込" %></p>
      
      <%= form_with model: @order, url: orders_path do |f| %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :telephone_number, value: @order.telephone_number %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
        <div class="button">
          <button type="submit">注文する</button>
        </div>
      <%= link_to "戻る", new_order_path %>
    </div>
  </div>
</div>
