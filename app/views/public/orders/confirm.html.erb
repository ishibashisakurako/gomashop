<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="text-center">注文確認画面</div>
      注文商品一覧
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>数量</th>
          <th>それぞれの金額</th>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.price * cart_item.amount %>円</td>
          </tr>
        <% end %>
      </table>

      <div class="text-right">
        <hr>
        送料 <%= @shopping_cost %>円
        <hr>
        合計金額 <%= @total_price %>円
        <hr>
        請求金額 <%= @total_payment %>円
      </div>

      <p>配送先</p>
      名前
      <p><%= @customer.last_name %> <%= @customer.first_name %></p>
      カナ
      <p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
      郵便番号
      <p><%= @order.postal_code %></p>
      住所
      <p><%= @order.address %></p>
      電話番号
      <p><%= @order.telephone_number %></p>
      支払方法
      <p><%= @order.payment_method == "credit_card" ? "クレジットカード" : "銀行振込" %></p>
      
      <%= form_with model: @order, url: orders_path do |f| %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :telephone_number, value: @order.telephone_number %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
        <%= f.submit "注文する" %>
      <% end %>
      
      <%= link_to "戻る", new_order_path %>
    </div>
  </div>
</div>
