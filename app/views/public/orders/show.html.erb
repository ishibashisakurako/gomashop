<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="text-center">
        注文履歴詳細
      </div>
      注文情報
      <hr>
      <p><%= @order.created_at.strftime("%Y年%m月%d日") %></p>
      <p><%= @order.postal_code %></p>
      <p><%= @order.address %></p>
      <p><%= @order.others %></p>

      <p><%= @order.payment_method == "credit_card" ? "クレジットカード" : "銀行振込" %></p>
      <hr>
      注文内容
      <table class="table">
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.price * order_detail.amount %></td>
          </tr>
        <% end %>
      </table>
      <hr>
      請求情報
      <table class="table">
        <tr>
          <th>商品合計金額</th>
          <th>送料</th>
          <th>請求金額</th>
        </tr>
        <tr>
          <td><%= @total_price %>円</td>
          <td><%= @order.shopping_cost %>円</td>
          <td><%= @order.total_payment %>円</td>
        </tr>
      </table>
      <%= link_to "戻る", orders_path %>
    </div>
  </div>
</div>