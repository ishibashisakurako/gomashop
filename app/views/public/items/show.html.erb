<div class="container">
  <div class="text-center">商品詳細</div>
  <hr>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, style: "width: 250px; height: 200px;" %>
      <% end %>
    </div>
    <div class="col-md-7">
      <p><b><%= @item.name %></b></p>
      <p><%= @item.introduction %></p>
      <p>税込価格 ¥<%= @item.price.to_i.to_s(:delimited) %></p>
      <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
        <%= f.select :amount, *[1..3] %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.submit "カートに追加" %>
      <% end %>
    </div>
  </div>
</div>