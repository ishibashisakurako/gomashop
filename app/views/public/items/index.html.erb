<div class="container">
  <div class="text-center mozi">商品一覧</div>
  <hr>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3 mb-4 text-center">
          <div style="padding: 10px;">
            <%= link_to item_path(item) do %>
              <%= image_tag item.image, style: "width: 100%; height: 200px; object-fit: cover;" %>
            <% end %>
            <b><%= item.name %></b>
            <p>¥<%= item.price.to_i.to_s(:delimited) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
