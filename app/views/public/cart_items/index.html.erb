<div class="text-center">ショッピングカート<div>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table">
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td>￥<%= cart_item.item.price %></td>
            <td>
              <%= form_with(model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true, class: "d-flex align-items-center gap-2") do |f| %>
                <div class="form-group mb-0">
                  <%= f.select :amount, options_for_select(1..3, cart_item.amount), class: "form-select form-select-sm border shadow-none rounded-0" %>
                </div>
                <%= f.button type: "submit", class: "btn btn-outline-success shadow-none" do %>
                  <i class="fa-solid fa-check"></i>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to cart_item_path(cart_item), class: "btn btn-outline-danger", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= link_to "会計に進む", new_order_path %>
    </div>
  </div>
</div>
